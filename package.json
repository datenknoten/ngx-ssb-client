{
    "name": "ngx-ssb-client",
    "version": "0.0.0",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "ng": "ng",
        "test": "ng test",
        "lint": "tslint -p src/tsconfig.app.json",
        "e2e": "ng e2e",
        "postinstall": "npx electron-builder install-app-deps",
        "start": "npm-run-all -p ng:serve electron:serve",
        "build": "ng build && npm run electron:tsc",
        "build:prod": "node hooks/environments/set_profile.js && ng build --prod && npm run electron:tsc",
        "ng:serve": "ng serve",
        "electron:tsc": "tsc -p tsconfig.electron.json",
        "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
        "electron:local": "npm run build:prod && electron .",
        "electron:linux": "npm run build:prod && npx electron-builder build --linux",
        "electron:windows": "npm run build:prod && npx electron-builder build --windows",
        "electron:mac": "npm run build:prod && npx electron-builder build --mac"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^6.0.0-rc.6",
        "@angular/common": "^6.0.0-rc.6",
        "@angular/compiler": "^6.0.0-rc.6",
        "@angular/core": "^6.0.0-rc.6",
        "@angular/forms": "^6.0.0-rc.6",
        "@angular/http": "^6.0.0-rc.6",
        "@angular/platform-browser-dynamic": "^6.0.0-rc.6",
        "@angular/platform-browser": "^6.0.0-rc.6",
        "@angular/router": "^6.0.0-rc.6",
        "@ngxs/store": "^3.0.0-rc.2",
        "@types/cheerio": "0.22.7",
        "cheerio": "1.0.0-rc.2",
        "core-js": "^2.5.5",
        "emoji-named-characters": "1.0.2",
        "moment": "2.22.1",
        "@yhnavein/ng2-semantic-ui": "0.9.8",
        "pull-stream": "3.6.7",
        "rxjs": "^6.0.0",
        "ssb-markdown": "3.6.0",
        "ssb-names": "3.1.0",
        "tui-editor": "1.1.0",
        "zone.js": "^0.8.19"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.5.11",
        "@angular/cli": "~6.0.0-rc.8",
        "@angular/compiler-cli": "^6.0.0-rc.6",
        "@angular/language-service": "^6.0.0-rc.6",
        "@datenknoten/tslint-config": "0.1.0",
        "@types/electron": "1.6.10",
        "@types/jasmine": "~2.8.3",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "^9.0.0",
        "codelyzer": "^4.0.1",
        "cross-env": "5.1.4",
        "dotenv": "5.0.1",
        "electron-builder": "20.11.1",
        "electron-reload": "1.2.2",
        "electron": "1.8.6",
        "jasmine-core": "~2.8.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "karma-jasmine": "~1.1.0",
        "karma": "~2.0.0",
        "npm-run-all": "4.1.2",
        "protractor": "~5.1.2",
        "replace": "0.3.0",
        "ssb-party": "0.5.1",
        "ts-node": "~4.1.0",
        "tslint-language-service": "0.9.9",
        "tslint": "~5.9.1",
        "typescript": "2.7.2",
        "wait-on": "2.1.0"
    }
