{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "src/tsconfig.app.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "type": "npm",
            "script": "lint",
            "isBackground": true,
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "absolute"
            },
        }
    ]
}
